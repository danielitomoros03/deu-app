<!-- Main Dashboard Layout -->
<%= render "layouts/header" %>
<div class="row">
    <%= render "layouts/sidebar" %>
    <div class="col-md mt-3 ms-auto col-lg-10 px-md-4">
      <!-- Flash messages -->
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="fas fa-check-circle me-2"></i><%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-triangle me-2"></i><%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <!-- Welcome Section -->
      <div class="mb-4">
        <h2 class="mb-1">Bienvenido, <%= current_user.email.split('@').first.capitalize %></h2>
        <p class="text-muted mb-0">¿Qué desea hacer hoy?</p>
      </div>

      <!-- Quick Actions -->
      <div class="row g-3 mb-4">
        <div class="col-12">
          <h5 class="mb-3">
            <i class="fas fa-bolt text-warning me-2"></i>Acciones Rápidas
          </h5>
        </div>
        
        <div class="col-md-4">
          <%= link_to new_dashboard_page_path, class: "text-decoration-none" do %>
            <div class="card border-0 shadow-sm h-100 action-card">
              <div class="card-body text-center p-4">
                <div class="action-icon action-icon-primary mb-3">
                  <i class="fas fa-plus fa-3x"></i>
                </div>
                <h5 class="card-title mb-2 text-dark">Nueva Página</h5>
                <p class="card-text text-muted small mb-3">
                  Crear una nueva página para compartir la información de la DEU.
                </p>
                <button class="btn btn-green-deu btn-sm">
                  <i class="fas fa-plus me-2"></i>Crear Ahora
                </button>
              </div>
            </div>
          <% end %>
        </div>

        <div class="col-md-4">
          <%= link_to dashboard_pages_path, class: "text-decoration-none" do %>
            <div class="card border-0 shadow-sm h-100 action-card">
              <div class="card-body text-center p-4">
                <div class="action-icon action-icon-primary mb-3">
                  <i class="fas fa-clipboard-list fa-3x"></i>
                </div>
                <h5 class="card-title mb-2 text-dark">Todas las Páginas</h5>
                <p class="card-text text-muted small mb-3">
                  Ver todas las páginas con información de la DEU.
                </p>
                <button class="btn btn-green-deu btn-sm">
                  <i class="fas fa-clipboard-list me-2"></i>Ver Ahora
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="card border-0 shadow-sm h-100 stats-card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <p class="text-muted mb-1 small">Páginas totales</p>
                  <h3 class="mb-0 fw-bold">
                    <%= Page.count %>
                  </h3>
                  <small class="text-success">
                    <i class="fas fa-arrow-up">
                    </i>
                    Este mes: <%= Page.where("created_at >= ?", Time.current.beginning_of_month).count %>
                  </small>
                </div>
                <div class="stats-icon stats-icon-primary">
                  <i class="fas fa-bullhorn fa-2x"></i>
                </div>
              </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
              <%= link_to dashboard_pages_path, class: "text-decoration-none small" do %>
                Ver todas <i class="fas fa-arrow-right ms-1"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>


      <!-- Recent Activity & Quick Links -->
      <div class="row g-3">
        <!-- Two columns: on large screens they sit side-by-side, on small screens they stack -->
        <div class="col-12 col-lg-6">
          <!-- Quick Links -->
          <div class="card border-0 shadow-sm mb-3 h-100">
            <div class="card-header bg-white border-0 py-3">
              <h5 class="mb-0">
                <i class="fas fa-link text-info me-2"></i>Enlaces Útiles
              </h5>
            </div>
            <div class="card-body p-0">
              <div class="list-group list-group-flush">
                <%= link_to dashboard_pages_path, class: "list-group-item list-group-item-action border-0 px-4 py-3 quick-link-item" do %>
                  <div class="d-flex align-items-center">
                    <div class="quick-link-icon bg-primary-subtle text-primary me-3">
                      <i class="fas fa-file-alt"></i>
                    </div>
                    <span>Ver todas las páginas</span>
                  </div>
                <% end %>
                
                <%= link_to new_dashboard_page_path, class: "list-group-item list-group-item-action border-0 px-4 py-3 quick-link-item" do %>
                  <div class="d-flex align-items-center">
                    <div class="quick-link-icon bg-success-subtle text-success me-3">
                      <i class="fas fa-book"></i>
                    </div>
                    <span>Crear nueva página</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-6">
          <!-- System Status -->
          <div class="card border-0 shadow-sm mb-3 h-100">
            <div class="card-header bg-white border-0 py-3">
              <h5 class="mb-0">
                <i class="fas fa-server text-success me-2"></i>Estado del Sistema
              </h5>
            </div>
            <div class="card-body">
              <!-- System Status Item 1 -->
              <div class="mb-3">
                <div class="d-flex justify-content-between mb-2">
                  <span class="small text-muted">
                    <i class="fas fa-users me-1"></i>Usuarios Activos
                  </span>
                  <span class="small fw-bold">
                    <%= User.count %>
                    /<%= User.count %>
                  </span>
                </div>
                <div class="progress" style="height: 8px;">
                  <div class="progress-bar bg-success" role="progressbar" style="width: 47%" aria-valuenow="47" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <small class="text-muted">Conectados en las últimas 24h</small>
              </div>

              <!-- System Health Badge -->
              <div class="mt-4 pt-3 border-top">
                <div class="d-flex align-items-center justify-content-between">
                  <span class="small text-muted">Sesión</span>
                  <span class="badge bg-success">
                    <i class="fas fa-check-circle me-1"></i>Operativo
                  </span>
                </div>
                <small class="text-muted d-block mt-1">
                  Email: <%= current_user.email %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- End of Main Dashboard Layout -->


<style>
  .btn-green-deu {
    background-color: #01695b;
    color: #ffffff;
  }
</style>