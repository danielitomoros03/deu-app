<%= render "layouts/header" %>
<div class="row">
  <%= render "layouts/sidebar" %>
  <div class="col-md mt-3 ms-auto col-lg-10 px-md-4">
    <!-- Flash messages -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i><%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i><%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-1">
          <i class="fas fa-user text-success me-2"></i>Detalles del Usuario
        </h2>
        <p class="text-muted mb-0">Información completa del usuario</p>
      </div>
      <div class="d-flex gap-2">
        <%= link_to edit_dashboard_user_path(@user), class: "btn btn-warning" do %>
          <i class="fas fa-edit me-2"></i>Editar
        <% end %>
        <%= link_to dashboard_users_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-2"></i>Volver al Listado
        <% end %>
      </div>
    </div>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to "Dashboard", dashboard_index_path, class: "text-success" %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to "Usuarios", dashboard_users_path, class: "text-success" %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= @user.email %>
        </li>
      </ol>
    </nav>

    <!-- User Details -->
    <div class="row g-4">
      <!-- Main Information -->
      <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0">
              <i class="fas fa-info-circle text-success me-2"></i>Información General
            </h5>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <!-- Email -->
              <div class="col-12">
                <div class="detail-item">
                  <label class="detail-label">Email</label>
                  <div class="detail-value">
                    <h4 class="text-dark mb-0"><%= @user.email %></h4>
                  </div>
                </div>
              </div>

              <!-- Sign In Count -->
              <div class="col-md-6">
                <div class="detail-item">
                  <label class="detail-label">Inicios de Sesión</label>
                  <div class="detail-value">
                    <span class="badge bg-primary fs-6"><%= @user.id %></span>
                  </div>
                </div>
              </div>

              <!-- Last Sign In -->
              <div class="col-md-6">
                <div class="detail-item">
                  <label class="detail-label">Último Inicio de Sesión</label>
                  <div class="detail-value">
                    <% if @user.id %>
                      <span class="text-dark"><%= @user.id %></span>
                    <% else %>
                      <span class="text-muted fst-italic">Nunca</span>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Created At -->
              <div class="col-md-6">
                <div class="detail-item">
                  <label class="detail-label">Fecha de Creación</label>
                  <div class="detail-value">
                    <span class="text-dark"><%= @user.created_at.strftime("%d/%m/%Y %H:%M") %></span>
                  </div>
                </div>
              </div>

              <!-- Updated At -->
              <div class="col-md-6">
                <div class="detail-item">
                  <label class="detail-label">Última Actualización</label>
                  <div class="detail-value">
                    <span class="text-dark"><%= @user.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar Information -->
      <div class="col-lg-4">
        <!-- Account Status -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white border-0 py-3">
            <h6 class="mb-0">
              <i class="fas fa-shield-alt text-success me-2"></i>Estado de la Cuenta
            </h6>
          </div>
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <i class="fas fa-circle <%= @user.id > 0 ? 'text-success' : 'text-warning' %> me-2"></i>
              <span><%= @user.id > 0 ? 'Cuenta Activa' : 'Cuenta Inactiva' %></span>
            </div>
            <% if @user.reset_password_sent_at %>
              <div class="d-flex align-items-center">
                <i class="fas fa-key text-info me-2"></i>
                <small class="text-muted">Recuperación enviada: <%= @user.reset_password_sent_at.strftime("%d/%m/%Y") %></small>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white border-0 py-3">
            <h6 class="mb-0">
              <i class="fas fa-cogs text-success me-2"></i>Acciones
            </h6>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <%= link_to edit_dashboard_user_path(@user), class: "btn btn-warning btn-sm" do %>
                <i class="fas fa-edit me-2"></i>Editar Usuario
              <% end %>
              <%= button_to dashboard_user_path(@user), method: :delete, data: { confirm: '¿Estás seguro de eliminar este usuario?' }, class: "btn btn-danger btn-sm" do %>
                <i class="fas fa-trash me-2"></i>Eliminar Usuario
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>