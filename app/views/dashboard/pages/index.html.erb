<!-- Main Dashboard Layout -->
<%= render "layouts/header" %>
<div class="row">
  <%= render "layouts/sidebar" %>
  <div class="col-md mt-3 ms-auto col-lg-10 px-md-4">
    <!-- Flash messages -->
    <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i><%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% end %>

    <% if alert %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i><%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% end %>

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1">
      <i class="fas fa-file-alt text-success me-2"></i>Páginas del Sistema
      </h2>
      <p class="text-muted mb-0">Administra las páginas del sitio web de la DEU</p>
    </div>
    <%= link_to new_dashboard_page_path, class: "btn btn-green-deu" do %>
      <i class="fas fa-plus me-2"></i>Nueva Página
    <% end %>
    </div>

    <!-- Stats Cards - Actualizadas con los grupos del modelo -->
    <div class="row g-3 mb-4">
      <div class="col-md-2">
        <div class="card border-0 shadow-sm h-100 stats-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1 small">Total Páginas</p>
            <h3 class="mb-0 fw-bold">
            <%= @total_count %>
            </h3>
          </div>
          <div class="stats-icon stats-icon-primary">
            <i class="fas fa-file-alt fa-2x"></i>
          </div>
          </div>
        </div>
        </div>
      </div>

      <div class="col-md-2">
        <div class="card border-0 shadow-sm h-100 stats-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1 small">Inicio</p>
            <h3 class="mb-0 fw-bold">
            <%= Page.inicio.count %>
            </h3>
          </div>
          <div class="stats-icon stats-icon-success">
            <i class="fas fa-home fa-2x"></i>
          </div>
          </div>
        </div>
        </div>
      </div>

      <div class="col-md-2">
        <div class="card border-0 shadow-sm h-100 stats-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1 small">Nosotros</p>
            <h3 class="mb-0 fw-bold">
            <%= Page.nosotros.count %>
            </h3>
          </div>
          <div class="stats-icon stats-icon-info">
            <i class="fas fa-users fa-2x"></i>
          </div>
          </div>
        </div>
        </div>
      </div>

      <div class="col-md-2">
        <div class="card border-0 shadow-sm h-100 stats-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1 small">Programas</p>
            <h3 class="mb-0 fw-bold">
            <%= Page.where(group: Page.groups.values_at('programa1', 'programa2', 'programa3').compact).count %>
            </h3>
          </div>
          <div class="stats-icon stats-icon-warning">
            <i class="fas fa-graduation-cap fa-2x"></i>
          </div>
          </div>
        </div>
        </div>
      </div>

      <div class="col-md-2">
        <div class="card border-0 shadow-sm h-100 stats-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1 small">Departamentos</p>
            <h3 class="mb-0 fw-bold">
            <%= Page.where(group: Page.groups.values_at('departamento1', 'departamento2', 'departamento3', 'departamento4').compact).count %>
            </h3>
          </div>
          <div class="stats-icon stats-icon-danger">
            <i class="fas fa-building fa-2x"></i>
          </div>
          </div>
        </div>
        </div>
      </div>

      <div class="col-md-2">
        <div class="card border-0 shadow-sm h-100 stats-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1 small">Certificaciones</p>
            <h3 class="mb-0 fw-bold">
            <%= Page.certificaciones.count %>
            </h3>
          </div>
          <div class="stats-icon stats-icon-secondary">
            <i class="fas fa-certificate fa-2x"></i>
          </div>
          </div>
        </div>
        </div>
      </div>
    </div>

    <!-- Segunda fila de estadísticas -->
    <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 stats-card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="text-muted mb-1 small">Grupos Extensión</p>
          <h3 class="mb-0 fw-bold">
          <%= Page.grupos_extension.count %>
          </h3>
        </div>
        <div class="stats-icon" style="background-color: rgba(111, 66, 193, 0.1); color: #6f42c1;">
          <i class="fas fa-project-diagram fa-2x"></i>
        </div>
        </div>
      </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 stats-card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="text-muted mb-1 small">Espacios Univ.</p>
          <h3 class="mb-0 fw-bold">
          <%= Page.espacios_universitarios.count %>
          </h3>
        </div>
        <div class="stats-icon" style="background-color: rgba(253, 126, 20, 0.1); color: #fd7e14;">
          <i class="fas fa-map-marker-alt fa-2x"></i>
        </div>
        </div>
      </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 stats-card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="text-muted mb-1 small">Contáctenos</p>
          <h3 class="mb-0 fw-bold">
          <%= Page.contact.count %>
          </h3>
        </div>
        <div class="stats-icon" style="background-color: rgba(32, 201, 151, 0.1); color: #20c997;">
          <i class="fas fa-envelope fa-2x"></i>
        </div>
        </div>
      </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 stats-card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="text-muted mb-1 small">Sin Grupo</p>
          <h3 class="mb-0 fw-bold">
          <%= Page.where(group: nil).count %>
          </h3>
        </div>
        <div class="stats-icon" style="background-color: rgba(108, 117, 125, 0.1); color: #6c757d;">
          <i class="fas fa-question-circle fa-2x"></i>
        </div>
        </div>
      </div>
      </div>
    </div>
    </div>

    <!-- Pages Table -->
    <div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
      <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        <i class="fas fa-list text-success me-2"></i>Lista de Páginas
      </h5>
      <div class="d-flex gap-2">
        <div class="input-group input-group-sm" style="width: 250px;">
        <input type="text" class="form-control" placeholder="Buscar páginas..." id="searchInput">
        <button class="btn btn-outline-secondary" type="button">
          <i class="fas fa-search"></i>
        </button>
        </div>
      </div>
      </div>
    </div>
    
    <div class="card-body p-0">
      <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
        <tr>
          <th scope="col" class="ps-4">N.</th>
          <th scope="col">Título</th>
          <th scope="col">Vista</th>
          <th scope="col">Tipo</th>
          <th scope="col">Descripción corta</th>
          <th scope="col">Última actualización</th>
          <th scope="col" class="text-center">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @pages.each do |page| %>
          <tr class="page-item">
          <td class="ps-4">
            <div class="page-icon bg-success-subtle text-success rounded me-3">
              <%= page.id %>
            </div>
          </td>
          <td>
            <div class="d-flex align-items-center">
              <div>
                <h6 class="mb-0 fw-bold"><%= page.name %></h6>
              </div>
            </div>
          </td>
          <td>
            <span class="badge <%= group_badge_class(page.group) %>">
            <%= page.group.present? ? page.group.humanize : 'Sin grupo' %>
            </span>
          </td>
          <td>
            <span class="badge <%= subgroup_badge_class(page.subgroup) %>">
            <%= page.subgroup.present? ? page.subgroup.humanize : 'Sin subgrupo' %>
            </span>
          </td>
          <td>
            <small class="text-muted">
            <%= truncate(page.short_description, length: 50) || 'Sin descripción' %>
            </small>
          </td>
          <td>
            <small class="text-muted">
            <%= page.updated_at.strftime("%d/%m/%Y %H:%M") %>
            </small>
          </td>
          <td>
            <div class="d-flex justify-content-center gap-2">
            <%= link_to dashboard_page_path(page), class: "btn btn-sm btn-outline-success", title: "Ver" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_dashboard_page_path(page), class: "btn btn-sm btn-outline-warning", title: "Editar contenido" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= button_to dashboard_page_path(page), method: :delete, data: { confirm: '¿Estás seguro de eliminar esta página?' }, form: { class: 'd-inline' }, class: "btn btn-sm btn-outline-danger", title: "Eliminar" do %>
              <i class="fas fa-trash"></i>
            <% end %>
            </div>
          </td>
          </tr>
        <% end %>
        
        <% if @pages.empty? %>
          <tr>
          <td colspan="6" class="text-center py-5">
            <div class="text-muted">
            <i class="fas fa-file-alt fa-3x mb-3"></i>
            <h5>No hay páginas creadas</h5>
            <p class="mb-3">Comienza creando tu primera página</p>
            <%= link_to new_dashboard_page_path, class: "btn btn-green-deu" do %>
              <i class="fas fa-plus me-2"></i>Crear Página
            <% end %>
            </div>
          </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @pages.any? %>
      <div class="card-footer bg-white border-0 py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted small">
        Mostrando <strong><%= @pages.size %></strong> de <strong><%= @total_count %></strong> páginas
        </div>
        <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm mb-0">
          <% prev_page = @current_page - 1 %>
          <li class="page-item <%= 'disabled' if @current_page <= 1 %>">
          <%= link_to 'Anterior', url_for(params.to_unsafe_h.merge(page: prev_page)), class: "page-link" %>
          </li>

          <%# Simple windowed page links (max 5 pages shown) %>
          <% window_start = [@current_page - 2, 1].max %>
          <% window_end = [window_start + 4, @total_pages].min %>
          <% window_start = [window_end - 4, 1].max %>

          <% (window_start..window_end).each do |p| %>
            <li class="page-item <%= 'active' if p == @current_page %>">
              <%= link_to p, url_for(params.to_unsafe_h.merge(page: p)), class: "page-link" %>
            </li>
          <% end %>

          <% next_page = @current_page + 1 %>
          <li class="page-item <%= 'disabled' if @current_page >= @total_pages %>">
          <%= link_to 'Siguiente', url_for(params.to_unsafe_h.merge(page: next_page)), class: "page-link" %>
          </li>
        </ul>
        </nav>
      </div>
      </div>
    <% end %>
  </div>
</div>

<style>
.page-icon {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stats-icon {
  width: 60px;
  height: 60px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stats-icon-primary { background-color: rgba(13, 110, 253, 0.1); color: #0d6efd; }
.stats-icon-success { background-color: rgba(25, 135, 84, 0.1); color: #198754; }
.stats-icon-info { background-color: rgba(13, 202, 240, 0.1); color: #0dcaf0; }
.stats-icon-warning { background-color: rgba(255, 193, 7, 0.1); color: #ffc107; }
.stats-icon-danger { background-color: rgba(220, 53, 69, 0.1); color: #dc3545; }
.stats-icon-secondary { background-color: rgba(108, 117, 125, 0.1); color: #6c757d; }

.action-card {
  transition: transform 0.2s ease-in-out;
}

.action-card:hover {
  transform: translateY(-5px);
}

.action-icon {
  width: 80px;
  height: 80px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.action-icon-primary { background-color: rgba(13, 110, 253, 0.1); color: #0d6efd; }
.action-icon-success { background-color: rgba(25, 135, 84, 0.1); color: #198754; }
.action-icon-info { background-color: rgba(13, 202, 240, 0.1); color: #0dcaf0; }

.btn-green-deu {
  background-color: #01695b;
  color: #ffffff;
}
</style>

<script>
// Simple search functionality
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('searchInput');
  const pageItems = document.querySelectorAll('.page-item');
  
  if (searchInput) {
  searchInput.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    
    pageItems.forEach(function(item) {
    const text = item.textContent.toLowerCase();
    if (text.includes(searchTerm)) {
      item.style.display = '';
    } else {
      item.style.display = 'none';
    }
    });
  });
  }
});
</script>