<!-- Outer Row -->
<div class="row w-120 h-100 justify-content-center bg-success">
  <div class="col-xl-10 col-lg-12 col-md-9 col-sm-9 col-xs-9">
    <div class="card o-hidden border-1 shadow-lg m-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image ms-3">
            <%= image_tag 'favicon.png', alt: 'Login Image' %>
          </div>
          <div class="col-lg-5">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h3 text-gray-900 mb-4">¡Bienvenido(a) de nuevo!</h1>
              </div>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'user' }) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: 'form-control form-control-user', autocomplete: "email", placeholder: 'Correo electrónico' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control form-control-user', placeholder: 'Contraseña' %>
                </div>

                <div class="form-group">
                  <div class="custom-control custom-checkbox small">
                    <%= f.check_box :remember_me, class: 'custom-control-input', id: 'customCheck' %>
                    <%= f.label :remember_me, 'Recordarme', class: 'custom-control-label', for: 'customCheck' %>
                  </div>
                </div>

                <%= f.submit 'Iniciar sesión', class: 'btn btn-primary btn-user btn-block' %>
              <% end %>

              <br>
              <hr>
              <div class="text-center">
                <%= render "devise/shared/links", class: 'small' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>